{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "useDefineForClassFields": true,
    "types": [
      "vite/client"
    ],
    "baseUrl": "src",
    "paths": {
      "@api/*": [
        "api/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@store/*": [
        "store/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@views/*": [
        "views/*"
      ]
    }
  },
  "include": [
    "src",
    "postcss.config.js"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}